<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceContainer name="checkout.shipping.methods.after">
            <block class="RedChamps\WeightDisplay\Block\Checkout\OnePage" name="product.total.weight.shipping" template="RedChamps_WeightDisplay::checkout/onepage/hyva/weight.phtml" after="-">
                <arguments>
                    <argument name="position_type" xsi:type="string">shipping_step</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="checkout.price-summary.section">
            <block class="RedChamps\WeightDisplay\Block\Checkout\OnePage" name="product.total.weight.summary" template="RedChamps_WeightDisplay::checkout/onepage/hyva/weight.phtml" after="price-summary.total-segments">
                <arguments>
                    <argument name="position_type" xsi:type="string">summary</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>

