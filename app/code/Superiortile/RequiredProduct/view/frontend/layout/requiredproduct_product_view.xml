<?xml version="1.0" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="catalog_product_view"/>
    <body>
        <referenceBlock name="product.info" template="Superiortile_RequiredProduct::product/view/form.phtml" />
        <referenceBlock name="product.info.details" template="Superiortile_RequiredProduct::product/view/details.phtml"/>
        <referenceContainer name="product.info.main">
            <block class="Magento\Catalog\Block\Product\View\Attributes" name="required.product.detail.link"
                   template="Superiortile_RequiredProduct::product/view/required-product-link.phtml">
            </block>
        </referenceContainer>
        <referenceContainer name="header.container" remove="true"/>
        <referenceContainer name="footer" remove="true"/>
        <referenceBlock name="breadcrumbs" remove="true"/>
        <referenceBlock name="catalog.topnav.without.ttl" remove="true"/>
        <referenceBlock name="navigation.sections" remove="true"/>
        <referenceContainer name="before.body.end" remove="true"/>
        <referenceBlock name="product.info.addtocart">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Superiortile_RequiredProduct::product/view/addtocart.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="product.info.addtocart.additional">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Superiortile_RequiredProduct::product/view/addtocart.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="reviews.tab" remove="false"/>
        <referenceBlock name="catalog.product.more.from.collection" remove="true"/>
        <referenceBlock name="catalog.product.related" remove="true"/>
        <referenceBlock name="product.info.required.collection" remove="true"/>
        <referenceBlock name="product.info.upsell" remove="true"/>
    </body>
</page>
