<?php if (count($collection)): ?>
    <?php foreach ($collection as $_product): ?>
        <div class="item product product-item required-item"

            data-product-id="<?= $escaper->escapeHtmlAttr($_product->getId()) ?>">
            <div class="product-item-info">
                <a href="#" class="product photo product-item-photo">
                    <?= $block->getImage($_product, $image)->toHtml() ?>
                </a>
            </div>
            <div class="product details product-item-details">
                <strong class="product name product-item-name">
                    <?= $escaper->escapeHtml($_product->getName()) ?>
                </strong>
                <div class="product-item-attributes">
                    <?= /* @noEscape */ $block->getProductAttributesHtml($_product) ?>
                </div>
            </div>
            <?= /* @noEscape */ $block->getProductPrice($_product) ?>
        </div>
    <?php endforeach; ?>
<?php endif; ?>
