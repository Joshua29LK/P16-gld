<?xml version="1.0" encoding="UTF-8"?>

<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="cmstree_child_pages_list"
            class="Woom\CmsTree\Block\Widget\Children"
            is_email_compatible="true"
            placeholder_image="Magento_Cms::images/widget_page_link.png">
        <label translate="true">CMS Tree Child Pages List</label>
        <description translate="true">Show Links to Child Pages</description>
        <parameters>
            <parameter name="id_path" xsi:type="block" visible="true" required="true" sort_order="10">
                <label translate="true">Page</label>
                <block class="Woom\CmsTree\Block\Adminhtml\Page\Widget\Chooser">
                    <data>
                        <item name="button" xsi:type="array">
                            <item name="open" xsi:type="string" translate="true">Select Page...</item>
                        </item>
                    </data>
                </block>
            </parameter>
            <parameter name="levels" xsi:type="text" visible="true">
                <label translate="true">Number of Levels</label>
            </parameter>
            <parameter name="show_top_level" xsi:type="select" visible="true"
                       source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Show Top Level Page</label>
                <description translate="true">Show Chosen Page Before Listing Child Pages</description>
            </parameter>
            <parameter name="template" xsi:type="select" visible="true">
                <label translate="true">Template</label>
                <options>
                    <option name="default" value="Woom_CmsTree::page/widget/children.phtml" selected="true">
                        <label translate="true">CMS Tree Links Block Template</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </widget>
</widgets>
