<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
  <table name="quote_address" resource="default">
    <column xsi:type="varchar" name="vat_trader_name" nullable="true" length="128" comment="VAT registered company name"/>
    <column xsi:type="varchar" name="vat_trader_address" nullable="true" length="255" comment="VAT registered address"/>
  </table>
  <table name="sales_order_address" resource="default">
    <column xsi:type="varchar" name="vat_trader_name" nullable="true" length="128" comment="VAT registered company name"/>
    <column xsi:type="varchar" name="vat_trader_address" nullable="true" length="255" comment="VAT registered address"/>
  </table>
  <table name="customer_address_entity" resource="default">
    <column xsi:type="varchar" name="vat_trader_name" nullable="true" length="128" comment="VAT registered company name"/>
    <column xsi:type="varchar" name="vat_trader_address" nullable="true" length="255" comment="VAT registered address"/>
  </table>
  <table name="vat_validation" resource="default" engine="innodb" comment="vat_validation">
    <column xsi:type="int" name="validation_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
    <column xsi:type="varchar" name="vat_id" nullable="false" length="16" comment="VAT number"/>
    <column xsi:type="smallint" name="vat_is_valid" padding="6" unsigned="false" nullable="false" identity="false" default="0" comment="Is VAT number valid"/>
    <column xsi:type="smallint" name="vat_request_success" padding="6" unsigned="false" nullable="false" identity="false" default="0" comment="Request successful"/>
    <column xsi:type="varchar" name="request_message" nullable="true" length="128" comment="Request message"/>
    <column xsi:type="varchar" name="vat_request_id" nullable="true" length="128" comment="Request identifier"/>
    <column xsi:type="datetime" name="vat_request_date" on_update="false" nullable="false" comment="Request date"/>
    <column xsi:type="text" name="vat_trader_name" nullable="true" comment="Registered trader name"/>
    <column xsi:type="text" name="vat_trader_address" nullable="true" comment="Registered trader address"/>
    <column xsi:type="text" name="handle" nullable="true" comment="Controller handle"/>
    <constraint xsi:type="primary" referenceId="PRIMARY">
      <column name="validation_id"/>
    </constraint>
  </table>
</schema>
