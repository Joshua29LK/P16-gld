			$showCart     = false;
			$templateType = null;
			$description  = false;
		}
		break;

	case 'upsell-rule':
		if ($exist = $block->hasItems()) {
			$type  = 'upsell';
			$class = $type;

			$image       = 'upsell_products_list';
			$hover_image = 'category_page_grid-hover';
			$title       = __('Dit heeft u misschien nodig');
			$items       = $block->getAllItems();
			$limit       = $_config->getProductDetail('upsell_limit');
