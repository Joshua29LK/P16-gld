<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" layout="2columns-left">
    <body>
        <referenceContainer name="main">
            <block class="Bss\Faqs\Block\Searchbar" name="searchbar" template="Bss_Faqs::main/searchbar.phtml" />
            <block class="Bss\Faqs\Block\CategorypageBlock" name="mainpageblock" template="Bss_Faqs::main/categorypage_main_block.phtml" />
        </referenceContainer>
        <referenceContainer name="sidebar.main">
            <block class="Bss\Faqs\Block\ModuleBlock" name="sidebar.mostfaq.list" template="Bss_Faqs::sidebar/most_faq.phtml" />
            <block class="Bss\Faqs\Block\ModuleBlock" name="sidebar.category.list" template="Bss_Faqs::sidebar/category_list.phtml" />
            <block class="Bss\Faqs\Block\ModuleBlock" name="sidebar.tag.list" template="Bss_Faqs::sidebar/tag_list.phtml" />
        </referenceContainer>
        <referenceContainer name="sidebar.main">
            <referenceBlock name="wishlist_sidebar" remove="true" />
            <referenceBlock name="catalog.compare.sidebar" remove="true" />
            <referenceBlock name="sale.reorder.sidebar" remove="true"/>
        </referenceContainer>
    </body>
</page>
