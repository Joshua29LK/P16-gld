<?xml version="1.0" encoding="UTF-8"?>
<form class="Woom\CmsTree\Ui\Component\Form" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Magento\Framework\View\Element\UiComponent\Control\DummyButton</item>
            <item name="save_and_continue" xsi:type="string">Magento\Framework\View\Element\UiComponent\Control\DummyButton</item>
            <item name="preview" xsi:type="string">Woom\CmsTree\Block\Adminhtml\Page\Edit\PreviewButton</item>
            <item name="delete" xsi:type="string">Woom\CmsTree\Block\Adminhtml\Page\Edit\DeleteButton</item>
            <item name="save" xsi:type="string">Woom\CmsTree\Block\Adminhtml\Page\Edit\SaveButton</item>
        </item>
    </argument>
    <dataSource name="page_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magento\Cms\Model\Page\DataProvider</argument>
            <argument name="requestFieldName" xsi:type="string">page_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="cmstree/page/save"/>
                    <item name="validate_url" xsi:type="url" path="cmstree/page/validate"/>
                </item>
            </argument>
        </argument>
    </dataSource>
    <fieldset name="general">
        <field name="parent">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">hidden</item>
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
        </field>
        <field name="path">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">hidden</item>
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
        </field>
        <field name="store_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">number</item>
                    <item name="formElement" xsi:type="string">hidden</item>
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
        </field>
        <field name="store">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">number</item>
                    <item name="formElement" xsi:type="string">hidden</item>
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="message" class="Woom\CmsTree\Ui\Component\Form\Fieldset\Message">
        <settings>
            <opened>true</opened>
            <label translate="true">Root CMS Tree Page</label>
        </settings>
        <container name="root_cms_tree_message_container" sortOrder="250">
            <htmlContent name="html_content">
                <block class="Magento\Framework\View\Element\Text" name="root_cms_tree_message_block">
                    <action method="setText">
                        <argument name="text" xsi:type="string">Root CMS Tree page has no content. Please select an existing page or add a new page from the sidebar.</argument>
                    </action>
                </block>
            </htmlContent>
        </container>
    </fieldset>
    <fieldset name="websites" class="Woom\CmsTree\Ui\Component\Form\Fieldset\Websites">
        <field name="storeviews">
            <settings>
                <notice translate="true"><![CDATA[NOTE: You may select only one store, which will initiate a move of current page to the selected store. If you select multiple stores, page will be moved to the first one.]]></notice>
            </settings>
        </field>
    </fieldset>
    <fieldset name="menu">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">Menu</item>
                <item name="sortOrder" xsi:type="number">5</item>
            </item>
        </argument>
        <field name="is_in_menu">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="source" xsi:type="string">page</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                    <item name="default" xsi:type="string">0</item>
                    <item name="label" xsi:type="string" translate="true">Include in Menu</item>
                </item>
            </argument>
        </field>
        <field name="menu_label">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">page</item>
                    <item name="label" xsi:type="string" translate="true">Menu Label</item>
                    <item name="dataScope" xsi:type="string">menu_label</item>
                    <item name="imports" xsi:type="array">
                        <item name="visible" xsi:type="string">${ $.parentName}.is_in_menu:checked</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="menu_add_type" class="Woom\CmsTree\Ui\Component\Form\Field\MenuPosition">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Woom\CmsTree\Model\Page\Source\MenuAddType</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">page</item>
                    <item name="label" xsi:type="string" translate="true">Add to Menu</item>
                    <item name="imports" xsi:type="array">
                        <item name="visible" xsi:type="string">${ $.parentName}.is_in_menu:checked</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="menu_add_category_id" class="Woom\CmsTree\Ui\Component\Form\Field\MenuPosition">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Woom\CmsTree\Model\Page\Source\Category</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">40</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">page</item>
                    <item name="label" xsi:type="string" translate="true">Before / After Category</item>
                    <item name="imports" xsi:type="array">
                        <item name="visible" xsi:type="string">${ $.parentName}.is_in_menu:checked</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>