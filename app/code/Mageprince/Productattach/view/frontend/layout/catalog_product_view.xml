<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="alert.urls">
            <block class="Mageprince\Productattach\Block\Attachment" name="productattach" as="productattach" template="Mageprince_Productattach::attachment.phtml" ifconfig="productattach/display/productdetail" />
        </referenceContainer>
        <referenceBlock name="product.info.details">
          <block class="Mageprince\Productattach\Block\Attachment" name="productattach.tab" as="productattach" template="Mageprince_Productattach::attachment.phtml" group="detailed_info" ifconfig="productattach/display/producttab">
             <arguments>
                <argument name="title" xsi:type="helper" helper="Mageprince\Productattach\Block\Attachment::getTabName"></argument>
                <argument name="sort_order" xsi:type="string">40</argument>
             </arguments>
          </block>
        </referenceBlock>
    </body>
</page>
